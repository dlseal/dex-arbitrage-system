# Lighter
LIGHTER_API_KEY=
LIGHTER_PRIVATE_KEY=
LIGHTER_ACCOUNT_INDEX=
LIGHTER_API_KEY_INDEX=

# GRVT 配置
GRVT_API_KEY=
GRVT_PRIVATE_KEY=
GRVT_TRADING_ACCOUNT_ID=

# NADO配置
# 私钥密文，注意注意注意不是master key，master key手动输入，并且存进程中，不会看到
ENCRYPTED_NADO_KEY=

# 策略阈值 (0.0015 = 0.15%)
SPREAD_THRESHOLD=0.0015
# 交易冷却 (秒)
TRADE_COOLDOWN=1.5

# 策略类型 GL_FARM、GL_INVENTORY、HFT_MM、SPREAD
STRATEGY_TYPE=HFT_MM

# 交易币种，刷量模式下只有一个，差价模式下多个
TARGET_SYMBOLS=BTC
# 各币种下单数量 (JSON 格式)
TRADE_QUANTITIES='{"BTC": 0.001, "ETH": 0.05, "SOL": 1.0, "DEFAULT": 0.0001}'

# 允许的最大价差亏损 (滑点容忍度)
# 例如 -0.0005 代表允许亏损 0.05% 去换取成交 (前提是 Rebate > 0.05%)
# 正数表示必须要盈利才开单，负数表示愿意支付的成本
MAX_SLIPPAGE_TOLERANCE=-0.0005
#重挂单阈值: 当目标价格与当前挂单价格偏差超过此比例时，撤单重挂
REQUOTE_THRESHOLD=0.0002

# GL_FARM策略配置
FARM_SIDE=buy
# 定义参与价差套利的两个交易所名称
#SPREAD_EXCHANGE_A=Binance
#SPREAD_EXCHANGE_B=GRVT

# 库存刷量专用配置
MAX_INVENTORY_USD=800.0
INVENTORY_LAYERS=3
INVENTORY_LAYER_SPREAD=1

# ==========================
# HFT (AS + OFI) 策略专用参数
# ==========================
HFT_EXCHANGE=Nado
# 风险厌恶系数 (Gamma): 调试时建议设小一点，避免频繁剧烈甩货
HFT_RISK_AVERSION=0.1
# OFI 敏感度 (Alpha): 调试时可以设大一点观察信号是否生效
HFT_OFI_SENSITIVITY=1.0
# 波动率因子: 决定基础盘口宽度
# Spread = MinTicks + (Factor * Volatility)
HFT_VOLATILITY_FACTOR=1.0
# 统计窗口 (Tick数)
HFT_WINDOW_SIZE=100
# 最小价差 (Tick): Lighter 的 Tick Size 通常很小，建议设大一点防止亏手续费
HFT_MIN_SPREAD_TICKS=2
# 防抖阈值: 只有新价格偏离当前订单 N 个 tick 时才改单
HFT_UPDATE_THRESHOLD_TICKS=2
# 单边最大持仓限制 (USD): 调试时给个小额度，防暴走
HFT_MAX_POS_USD=1000